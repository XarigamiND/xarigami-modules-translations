<p>
<xar:for start="$i=0" test="$i lt $stepCount" iter="$i++">
  <xar:if condition="$i gt 0">
  &gt;&gt;
  </xar:if>
  <xar:if condition="$i lt $currentStep">
        <a href="#$stepURLs[$i]#">#$stepLabels[$i]#</a>
  <xar:elseif condition="$i eq $currentStep" />
        <strong>#$stepLabels[$i]#</strong>
  <xar:else />
        #$stepLabels[$i]#
  </xar:if>
</xar:for>
</p>
