<p>
<xar:for start="$i=0" test="$i lt count($opLabels)" iter="$i++">
  <xar:if condition="$i gt 0">
  |
  </xar:if>
  <xar:if condition="$enabledOps[$i] and $i ne $currentOp">
    <a href="#$opURLs[$i]#">#$opLabels[$i]#</a>
  <xar:elseif condition="$i eq $currentOp" />
    <b>#$opLabels[$i]#</b>
  <xar:else />
    #$opLabels[$i]#
  </xar:if>
</xar:for>
</p>
